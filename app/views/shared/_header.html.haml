%header
  =link_to image_tag('alphadelta-logo1.png', :alt => "The Alpha Delta est. 1991"), root_path, id: "header_logo"
  %nav.navbar.navbar-default{role: "navigation"}
    .ribbon
      .ribbon-stitches-top
      %strong.ribbon-content
        %ul#nav_ul.nav.pull-right
          %li{:class => "#{'active' if current_page?(root_path)}"}=link_to "Home", root_path
          %li{:class => "#{'active' if current_page?(history_path)}"}=link_to "History", history_path
          %li{:class => "#{'active' if current_page?(albums_path)}"}=link_to "Photos & Composites", albums_path
          %li{:class => "#{'active' if current_page?(job_postings_path)}"}=link_to "Job Postings", job_postings_path
          %li{:class => "#{'active' if current_page?(alumni_news_path)}"}=link_to "Alumni News", alumni_news_path
        .clearfix.visible-xs
      .ribbon-stitches-bottom

